{
  "name": "pkgless",
  "version": "0.1.0",
  "description": "Sly is a CLI tool to add components, icons, and utilities as code, not dependencies.",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./register": "./register.js",
    "./ts-loader": "./ts-loader.js"
  },
  "bin": {
    "sly": "start.js",
    "pkgless": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Jacob Paris (https://twitter.com/jacobmparis)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobparis-insiders/sly.git",
    "directory": "cli"
  },
  "files": [
    "dist",
    "ts-loader.js",
    "register.js"
  ],
  "keywords": [
    "jacobparis"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "start:dev": "REGISTRY_URL=http://localhost:3000 node dist/index.js",
    "start": "node dist/index.js",
    "release": "changeset version",
    "pub": "npm run build && npm publish --access public",
    "test": "vitest run"
  },
  "dependencies": {
    "@clack/core": "https://pkg.pr.new/jacobparis/clack/@clack/core@5",
    "@epic-web/cachified": "^5.1.2",
    "@epic-web/invariant": "^1.0.0",
    "@octokit/rest": "^21.0.2",
    "@xstate/inspect": "^0.8.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "compare-versions": "^6.0.0",
    "cosmiconfig": "^8.2.0",
    "esbuild": "^0.19.11",
    "execa": "^7.1.1",
    "jsonata": "^2.0.5",
    "lru-cache": "^10.0.0",
    "nypm": "^0.3.12",
    "ora": "^6.3.1",
    "partykit": "^0.0.111",
    "partysocket": "^1.0.2",
    "prompts": "^2.4.2",
    "read-package-up": "^11.0.0",
    "tsx": "^4.19.2",
    "ws": "^8.18.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@gmrchk/cli-testing-library": "github:jpulec/cli-testing-library#patch-1",
    "@types/prompts": "^2.4.4",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-plugin-no-template-curly-in-string-fix": "^1.0.4",
    "rimraf": "^5.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.1.6",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "xstate": "^5.18.2"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/jacobparis-insiders/sly/issues"
  },
  "homepage": "https://github.com/jacobparis-insiders/sly#readme",
  "main": "index.js",
  "prettier": {
    "semi": false
  }
}
